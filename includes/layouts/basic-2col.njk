{% extends "core/base.njk" %}

{%- block page %}
  <div class="page">
    <div class="page__background">
      {%- block background %}
        {%- include '../global/background.njk' %}
      {%- endblock %}
    </div>

    <header class="page__header">
      {%- block header %}
        {%- include '../global/header.njk' %}
      {%- endblock %}
    </header>

    <div class="page__layout">
      <aside class="navbar">
        <div class="navbar--title"></div>
        <div class="navbar--content">
          {%- block nav %}
            {%- include 'global/navigation.njk' %}
          {%- endblock %}
        </div>
      </aside>

      <main class="main">
        <div class="main--title"></div>
        <div class="main--content">
          {%- block main %}
            {{- content | safe }}
          {%- endblock %}
        </div>
      </main>
    </div>

    <footer class="page__footer">
      {%- block footer %}
        {%- include '../global/footer.njk' %}
      {%- endblock %}
    </footer>
  </div>
{%- endblock %}
