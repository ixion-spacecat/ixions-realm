<ul class="post-list" role="list">
  {%- for post in postlist | reverse %}
    <li class="post-item">
      <div class="post-item__title">
        <a href="{{ post.page.url }}">{{ post.data.title }}</a>
      </div>
      <div class="post-item__date">
        {%- if post.data.draft %}
          <span>DRAFT</span>
        {%- else %}
          <span>{{ post.page.date | readableDate }}</span>
        {%- endif %}
      </div>
      <div class="post-item__description">{{ post.data.description }}</div>
      <div class="post-item__read-time">
        <span>{{ post.content | readingTime }} read</span>
      </div>
    </li>
  {%- endfor %}
</ul>
