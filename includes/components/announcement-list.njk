<ul class="announcement-list" role="list">
  {%- for announcement in announcementlist | reverse -%}
    <li class="announcement-item">
      <div class="announcement-item__title">
        <a href="{{ announcement.page.url }}">{{ announcement.data.title }}</a>
      </div>
      <div class="announcement-item__date">
        {%- if announcement.data.draft %}
          <span>DRAFT</span>
        {%- else %}
          <span>{{ announcement.page.date | readableDate }}</span>
        {%- endif %}
      </div>
      <div class="announcement-item__content">
        {{ announcement.content | safe }}
      </div>
    </li>
  {%- endfor -%}
</ul>
